#!/bin/bash

if [[ ! -z """${1}""" ]]
then
    export TARGET="${1}"
    export DEFAULT_INTERFACE=$(ip -o -4 route show to default | awk '/dev/ {print $5}')
    export DEFAULT_INTERFACE_ADDRESS=$(ifconfig ${DEFAULT_INTERFACE_ADDRESS}  | grep -o -h -U -P 'inet\s[^0-9]*([^\s]*)' | sed "s#inet\s[^0-9]*##gi")
    LHOST=$(
else
    echo "Usage: ${0} <TARGET>"
fi
